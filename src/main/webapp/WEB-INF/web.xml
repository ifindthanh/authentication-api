<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <servlet>
   <servlet-name>GoogleLoginServlet</servlet-name>
   <servlet-class>com.google.oauthsample.controller.GoogleLoginServlet</servlet-class>
 </servlet>
 
 <servlet-mapping>
   <servlet-name>GoogleLoginServlet</servlet-name>
   <url-pattern>/googleLogin</url-pattern>
 </servlet-mapping>
 
  <servlet>
   <servlet-name>GoogleLoginCallbackServlet</servlet-name>
   <servlet-class>com.google.oauthsample.controller.GoogleLoginCallbackServlet</servlet-class>
 </servlet>
 
 <servlet-mapping>
   <servlet-name>GoogleLoginCallbackServlet</servlet-name>
   <url-pattern>/oauth2callback</url-pattern>
 </servlet-mapping>

</web-app>